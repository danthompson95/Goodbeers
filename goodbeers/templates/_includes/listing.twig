<div class="row">
	{% for post in posts %}
		<div class="col-md-4 mb-4">
			<div class="card">
				<h5 class="card-header">{{post.title}}</h5>
				<div class="card-body">
					<p class="card-text">
						<b>ABV:</b>
						{{post.abv}}%</p>
					<a href="{{post.url}}" class="btn btn-primary">View More Details</a>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
